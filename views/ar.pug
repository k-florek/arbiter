        each gene, i in genes
          tr
            td.text-center
              =gene.ISOID
            td.text-center
              =gene.GENE
            td.text-center
              =gene.DATABASE
            td.text-center
              =gene.COVERAGE
            td.text-center
              =gene.IDENTITY
            td.text-center
              =gene.CONTIG
            td.text-center
              =gene.GSTART
            td.text-center
              =gene.GEND
