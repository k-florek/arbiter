doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='description', content='Web portal to NGS QC analysis')
    meta(name='author', content='Nick Florek')
    link(rel='icon', href='../../../../favicon.ico')
    title SkySeq-QC
    // Bootstrap core CSS
    link(href='/bower/bootstrap/dist/css/bootstrap.css', rel='stylesheet')
  body
    nav.navbar.navbar-expand-sm.navbar-dark.bg-dark
      a.navbar-brand(href='/') Octopods
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbar', aria-controls='navbar', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbar.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item.active
            a.nav-link(href='/')
              button.btn.btn-dark(type="button") Home
        form.form-inline.my-2.my-md-0
          input.form-control(type='text', placeholder='Search')

    block content
    //
      Bootstrap core JavaScript
      ==================================================
    // Placed at the end of the document so the pages load faster
    script(src='/bower/jquery/dist/jquery.slim.min.js')
    //script(src='../../assets/js/vendor/popper.min.js')
    script(src='/bower/bootstrap/dist/js/bootstrap.min.js')
    script(src='/socket.io/socket.io.js')
    script(src='/bower/jsalert/jsalert.min.js')
    script.
      var socket = io();
      socket.on('message', function(message) {
          JSAlert.alert(message,null, JSAlert.Icons.Success);
      })
