html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='description', content='')
    meta(name='author', content='')
    link(rel='icon', href='../../../../favicon.ico')
    title SkySeq
    // Bootstrap core CSS
    link(href='/bower/bootstrap/dist/css/bootstrap.css', rel='stylesheet')
    //Signin css
    link(href='/css/signin.css', rel='stylesheet')
  body.text-center
    if(message)
      form.form-signin(action = "/login" method = "POST" class = "form-signin")
        h1.h3.mb-3.font-weight-normal #{message}
        input(name = "user" type = "text" required autofocus placeholder = "User ID" class = "form-control")
        input(name = "password" type = "password" required placeholder = "Password" class = "form-control")
        button(type = "Submit" class = "btn btn-lg btn-primary btn-block") Login
