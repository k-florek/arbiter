doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='description', content='Web portal to NGS QC analysis')
    meta(name='author', content='Kelsey Florek')
    link(rel='icon', href='../../../../favicon.ico')
    title SkySeq
    // Bootstrap core CSS
    link(rel='stylesheet' href='/bower/bootstrap/dist/css/bootstrap.css')
    link(rel='stylesheet' href='/bower/datatables.net-bs4/css/dataTables.bootstrap4.css')
    link(rel='stylesheet' href='/css/skyseq_datatables.css')
    script(src='/bower/jquery/dist/jquery.min.js')
  body
    nav.navbar.navbar-expand-sm.navbar-dark.bg-dark
      a.navbar-brand(href='/') SkySeq
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbar', aria-controls='navbar', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbar.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item.active
            a.nav-link(href='/')
              button.btn.btn-dark(type="button") Home
              li.nav-item.dropdown
                a#navbarDropdown.nav-link.dropdown-toggle(href='#', role='button', data-toggle='dropdown')
                  button.btn.btn-dark(type="button") Options
                .dropdown-menu(aria-labelledby='navbarDropdown')
                  a.dropdown-item(href='#') Change Password
                  .dropdown-divider
                  a.dropdown-item(href='#') Add User
                  a.dropdown-item(href='#') Delete User
          li.nav-item
            a.nav-link(href='logout')
              button.btn.btn-dark(type="button") Logout: #{username}
        .form-inline.my-2.my-md-0
          input.form-control(type='text', placeholder='Search',id='searchText')
    block content
  //
    Bootstrap and DataTables core JavaScript
    ==================================================
    Placed at the end of the document so the pages load faster
  //
  //script(src='../../assets/js/vendor/popper.min.js')
  script(src='/bower/datatables.net/js/jquery.dataTables.min.js')
  script(src='/bower/bootstrap/dist/js/bootstrap.min.js')
  script(src='/bower/datatables.net-bs4/js/dataTables.bootstrap4.min.js')
